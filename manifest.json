{
  "manifest_version": 3,
  "name": "FLOWFIX",
  "version": "2.0.0",
  "description": "Draggable Floating UI using content script",
  "permissions": ["scripting", "activeTab", "storage", "identity"],
  "host_permissions": [
    "<all_urls>",
    "https://accounts.google.com/*",
    "https://www.googleapis.com/*"
  ],

  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "oauth2": {
    "client_id": "345688677648-0jekfakp5sdcqq83ftq85bvuqmgk2df9.apps.googleusercontent.com",
    "scopes": ["openid", "email", "profile"]
  },

  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*", "<all_urls>"],
      "js": ["content.bundle.js"],
      "css": ["global.css"],
      "run_at": "document_idle"
    }
  ],

  "web_accessible_resources": [
    {
      "resources": ["public/*", "avatars/*.png"],
      "matches": ["<all_urls>"]
    }
  ],
  "icons": {
    "16": "/public/icon-16.png",
    "32": "/public/icon-32.png",
    "48": "/public/icon-48.png",
    "128": "/public/icon-128.png"
  }
}
